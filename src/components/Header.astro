---
import { navItems } from "../lib/navigation";
import { MobileNav } from "./MobileNav";
---

<header
    class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
    <div
        class="container mx-auto flex h-16 items-center justify-between px-4 sm:px-8"
    >
        <div class="flex items-center gap-8">
            <a
                href="/"
                class="flex items-center space-x-2 font-bold text-xl tracking-tight"
                aria-label="AWS User Group Jakarta"
            >
                <img
                    src="/android-chrome-192x192.png"
                    alt="AWS User Group Jakarta Logo"
                    class="h-10 w-auto"
                />
            </a>
            <nav class="hidden md:flex gap-8 text-sm font-medium">
                {
                    navItems.map((item) => (
                        <a
                            href={item.href}
                            class="transition-colors hover:text-primary text-muted-foreground/80 hover:font-semibold"
                        >
                            {item.name}
                        </a>
                    ))
                }
            </nav>
        </div>
        <div class="flex items-center gap-4">
            <a
                href="https://www.meetup.com/aws-ug-jakarta"
                target="_blank"
                rel="noopener noreferrer"
                class="hidden sm:inline-flex h-9 items-center justify-center rounded-full bg-primary/10 px-4 py-2 text-sm font-medium text-primary hover:bg-primary/20 transition-colors"
            >
                Join Community
            </a>
            <MobileNav client:load items={navItems} />
        </div>
    </div>
</header>
